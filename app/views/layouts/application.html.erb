<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      <strong><%= current_user.name %></strong>|
      <%= link_to t('Edit profile'), edit_user_registration_path, class: 'navbar-link' %> |
      <%= link_to t("Logout"), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>|
      <%= link_to Book.model_name.human, books_path %>|
      <%= link_to User.model_name.human, users_path %>|
    <% end %>
  </p>

    <%= yield %>

  </body>
</html>
